<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/zidong"
    android:padding="15dp"
    android:background="@drawable/newbackg"
    >


    <Button
        android:id="@+id/jzprim"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonbg2"
        android:text="原点校正"
        android:textSize="20dp" />

    <Button
        android:id="@+id/gjgh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonbg2"
        android:text="轨迹规划"
        android:textSize="20dp" />
    <Button
        android:id="@+id/dtxz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:background="@drawable/buttonbg2"
        android:text="   下载地图   "
        android:textSize="20dp" />

    <Button
        android:id="@+id/manualDrawMap"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonbg2"
        android:text="手绘地图"
        android:textSize="20dp" />

    <Button
        android:id="@+id/startwork"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonbg2"
        android:text="开启作业"
        android:textSize="20dp" />

    <Button
        android:id="@+id/pauseCruise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonbg2"
        android:text="巡航暂停"
        android:textSize="20dp" />




    <Button
        android:id="@+id/JumpManual"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:background="@drawable/buttonbg2"
        android:text="手动模式"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ManualStop"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonbg2"
        android:text="手动停止"
        android:textSize="20dp" />

    <Button
        android:id="@+id/JumpHalfAuto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:background="@drawable/buttonbg2"
        android:text="  半自动  "
        android:textSize="20dp" />


    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_above="@+id/imageButton7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginBottom="0dp"
        android:background="#FF909090" />

    <TextView
        android:id="@+id/CSSHOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="监测参数"
        android:textColor="#FFFAFA"
        android:textSize="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="385dp"
        android:background="#FF909090"
        android:id="@+id/view1" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/CSSHOW"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/jt1" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="37dp"
        android:background="#FF909090" />

    <TextView
        android:id="@+id/PATHSHOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="385dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="实时路径"
        android:textColor="#FFFAFA"
        android:textSize="20dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton7"
        android:layout_below="@+id/view1"
        android:background="@drawable/jt1"
        android:id="@+id/imageButton8"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/schoollogo1" />


</RelativeLayout>