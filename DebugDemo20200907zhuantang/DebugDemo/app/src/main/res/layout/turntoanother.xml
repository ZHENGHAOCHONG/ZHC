<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shoudong"
    android:padding="15dp"
    android:background="@drawable/newbackg">

    <Button
        android:id="@+id/ForwardAuto"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonbg2"
        android:text="正转自动"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ForwardManual"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonbg2"
        android:text="正转手动"
        android:textSize="20dp" />


    <Button
        android:id="@+id/ReverseAuto"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonbg2"
        android:text="反转自动"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ReverseManual"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonbg2"
        android:text="反转手动"
        android:textSize="20dp" />
    <Button
        android:id="@+id/JumpAuto"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonbg2"
        android:text="自动"
        android:textSize="20dp" />

    <Button
        android:id="@+id/HalfAuto"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonbg2"
        android:text="半自动"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftdianji"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="170dp"
        android:text="左明轮电机速度"
        android:textSize="20dp"
        android:textColor="#FFFAFA" />
<!--
    <SeekBar
        android:id="@+id/seekBar"
        style="@android:style/Widget.SeekBar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="7dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="180dp"
        android:progress="30"
        android:progressDrawable="@drawable/seekprogress"
        android:thumb="@drawable/seekcircle" />

    <TextView
        android:id="@+id/speedpwm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:text="明轮电机转速:30%"
        android:textColor="#F0EDED"
        android:textSize="18dp" />
        -->

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/leftdianji"
        android:layout_toRightOf="@+id/leftdianji" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightdianji"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="210dp"
        android:text="右明轮电机速度"
        android:textSize="20dp"
        android:textColor="#FFFAFA" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/rightdianji"
        android:layout_toRightOf="@+id/rightdianji" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dangwei"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="258dp"
        android:layout_marginTop="180dp"
        android:text="倒挡"
        android:textSize="18dp"
        android:textColor="#FFFAFA" />

    <CheckBox
        android:id="@+id/CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:paddingRight="@+id/dangwei"
        android:layout_marginStart="310dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="180dp" />

    <!-- 使用百度地图的提供的MapView -->
    <com.baidu.mapapi.map.MapView
        android:id="@+id/map1"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/spinner2"
        android:layout_marginTop="40dp"
        android:clickable="true"/>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map2"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/spinner2"
        android:layout_marginTop="40dp"
        android:clickable="true"/>

</RelativeLayout>