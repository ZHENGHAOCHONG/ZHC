<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registerlayout"
    android:padding="30dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textregister"
      android:text="请输入注册信息"
      android:textSize="30dp"
      android:textColor="#000000"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textregstname"
      android:text="用户名:"
      android:textSize="20dp"
      android:textColor="#000000"
      android:layout_marginTop="100dp"
      />
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/textregstname"
      android:layout_marginTop="90dp"
      android:layout_alignParentRight="true"
      android:id="@+id/editregstnamne"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textregstpass"
      android:text="密    码 :"
      android:textSize="20dp"
      android:textColor="#000000"
      android:layout_marginTop="140dp"
      />
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textregstname"
      android:layout_alignRight="@+id/editregstnamne"
      android:layout_alignLeft="@+id/editregstnamne"
      android:id="@+id/editregstpass"
      />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btnregs"
      android:text="确认"
      android:layout_marginTop="190dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentLeft="true"

      />


</RelativeLayout>
