<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.simplenewsystem.MainActivity">

  <ImageView
      android:layout_width="194dp"
      android:layout_height="64dp"
      android:id="@+id/schoollogo"
      android:layout_centerHorizontal="true"
      android:src="@drawable/schoollogo1"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/title"
      android:text="水产养殖远程监控系统"
      android:textColor="#2828ff"
      android:textSize="30dp"
      android:layout_below="@+id/schoollogo"
      android:layout_centerHorizontal="true"
      />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:hint="password"
        android:inputType="textPassword"/>



    <Button
      android:layout_width="140dp"
      android:layout_height="86.5dp"
      android:id="@+id/bnlogin"
      android:text="登录"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="350dp"
      android:layout_alignParentRight="false"
      android:layout_alignParentLeft="false"
      android:textSize="30dp"
      />


  <ImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignEnd="@+id/title"
      android:layout_alignRight="@+id/title"
      android:layout_below="@+id/title"
      android:layout_marginEnd="10dp"
      android:layout_marginRight="10dp"
      android:src="@drawable/bg2" />

</RelativeLayout>
